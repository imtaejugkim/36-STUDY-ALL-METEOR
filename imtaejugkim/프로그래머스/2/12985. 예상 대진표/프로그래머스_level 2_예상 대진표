class Solution {
    fun solution(n: Int, a: Int, b: Int): Int {
        var round = 0
        var pA = a
        var pB = b

        // 1) 8, 4 -> 9, 5 -> 4,2
        // 2) 4, 2 -> 5, 3 -> 2,1
        // 3) 2, 1 -> 3. 2 -> 1,1 (ë)
        while (pA != pB) {
            pA = (pA + 1) / 2
            pB = (pB + 1) / 2
            round++
        }

        println(round)
        return round
    }
}